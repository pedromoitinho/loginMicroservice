{
	"info": {
		"name": "JWT Authentication Tests",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"variable": [
		{
			"key": "baseUrl",
			"value": "https://loginmicroservice-clcl.onrender.com"
		},
		{
			"key": "token",
			"value": ""
		}
	],
	"item": [
		{
			"name": "1. Register User",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/x-www-form-urlencoded"
					}
				],
				"body": {
					"mode": "urlencoded",
					"urlencoded": [
						{
							"key": "username",
							"value": "testuser123"
						},
						{
							"key": "password",
							"value": "securepass123"
						}
					]
				},
				"url": "{{baseUrl}}/api/auth/register"
			},
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"if (pm.response.code === 200) {",
							"    const responseJson = pm.response.json();",
							"    pm.environment.set('token', responseJson.token);",
							"    console.log('Token saved:', responseJson.token);",
							"}"
						]
					}
				}
			]
		},
		{
			"name": "2. Login User",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/x-www-form-urlencoded"
					}
				],
				"body": {
					"mode": "urlencoded",
					"urlencoded": [
						{
							"key": "username",
							"value": "testuser123"
						},
						{
							"key": "password",
							"value": "securepass123"
						}
					]
				},
				"url": "{{baseUrl}}/api/auth/login"
			},
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"if (pm.response.code === 200) {",
							"    const responseJson = pm.response.json();",
							"    pm.environment.set('token', responseJson.token);",
							"    console.log('Token saved:', responseJson.token);",
							"}"
						]
					}
				}
			]
		},
		{
			"name": "3. Get Current User",
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{token}}"
					}
				],
				"url": "{{baseUrl}}/api/auth/me"
			}
		},
		{
			"name": "4. Protected Endpoint",
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{token}}"
					}
				],
				"url": "{{baseUrl}}/api/auth/protected"
			}
		},
		{
			"name": "5. Health Check",
			"request": {
				"method": "GET",
				"url": "{{baseUrl}}/actuator/health"
			}
		}
	]
}